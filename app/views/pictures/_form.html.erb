<div class = "input_form">
  <%= form_with(model: @picture, local: true, url: choose_new_or_edit) do |form| %>
    <% if @picture.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @picture.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="new_picture_image input_form_row">
      <span class = "input_form_title">
        <%= form.label :Picture, class: "new_picture_label" %>
      </span>
      <%= form.file_field :image, id: :picture_image %>
    </div>

    <div class="new_picture_content input_form_row">
      <span class = "input_form_title">
        <%= form.label :content, class: "new_picture_label" %>
      </span>
      <%= form.text_field :content %>
    </div>

    <div class = "input_submit">
      <%= form.submit "作成", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
<div class = "input_submit">
  <%= link_to "投稿一覧に戻る", pictures_path, class: "btn btn-primary" %>
</div>
